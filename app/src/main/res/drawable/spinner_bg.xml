<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:drawable="@android:color/white" android:state_pressed="true" />
    <item android:drawable="@android:color/white" android:state_selected="true" />
    <item>
        <layer-list>
            <item>
                <inset android:insetLeft="0dp" android:insetRight="0dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorPrimaryDarkTrans" />
                        <stroke android:width="1dp" android:color="@color/fontColour" />
                        <corners android:radius="8dp" />
                    </shape>
                </inset>
            </item>
            <item>

                    <bitmap android:gravity="center_vertical|right"
                    android:src="@android:drawable/arrow_down_float"/> // you can place your dropdown image

            </item>

        </layer-list>
    </item>


</selector>



